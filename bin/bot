#!/usr/bin/env ruby

require 'telegram/bot'
require 'gemoji'
require 'async'
require 'encrypted_strings'
require 'sanitize'

require './lib/app_configurator'
require './lib/emoji'
require './lib/formatter'
require './lib/message_responder'
require './lib/message_sender'

config = AppConfigurator.new
config.configure

token = config.get_token
logger = config.get_logger

logger.debug 'Starting telegram bot'

telegram_bot_client = Telegram::Bot::Client.new(token)

telegram_bot_client.run do |bot|
  bot.listen do |message|
    #Async do |task|
      options = { bot: bot, message: message }

      if message.respond_to?(:data)
        logger.debug "#{message.from.id} - @#{message.from.username}: #{message.data}"
      else
        logger.debug "#{message.from.id} - @#{message.from.username}: #{message}"
      end
      MessageResponder.new(options).respond
      #rescue => e
        #logger.debug "Error: #{e}"
    #end
  end
end